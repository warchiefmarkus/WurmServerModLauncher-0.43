<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>mod-package</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/dist</directory>
      <outputDirectory>mods/</outputDirectory>
      <excludes>
        <exclude>${project.name}.config</exclude>
      </excludes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/${project.name}-${project.version}.jar</source>
      <outputDirectory>mods/${project.name}</outputDirectory>
      <destName>${project.name}.jar</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <excludes>
        <exclude>${project.groupId}:${project.name}</exclude>
        <exclude>org.gotti.wurmunlimited:server-modlauncher</exclude>
        <exclude>org.gotti.wurmunlimited:server</exclude>
        <exclude>org.gotti.wurmunlimited:common</exclude>
      </excludes>
      <outputFileNameMapping>mods/${project.name}/libs/${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
